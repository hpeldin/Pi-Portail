<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="#d7ecf1"
    android:clickable="true"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Configuration"
            android:id="@+id/cfgtitre"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SRV Internet"
            android:id="@+id/cfgsrvinter"
            android:layout_column="0"
            android:layout_span="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edsrvinternet"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SRV Intranet"
            android:id="@+id/cfgsrvintra"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edsrvintra"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Port"
            android:id="@+id/cfgport"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edport"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="URL"
            android:id="@+id/cfgurl"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edurl"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cmd Status"
            android:id="@+id/cfgstatus"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edstatus"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cmd Ouvrir"
            android:id="@+id/cfgouvrir"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edouvrir"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Login"
            android:id="@+id/cfglogin"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edlogin"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mot de Passe"
            android:id="@+id/cfgpwd"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/edpwd"
            android:layout_column="1"
            android:inputType="text"
            android:textSize="10dp"
            android:password="true" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:id="@+id/cfgvalid"
            android:layout_column="0"
            android:enabled="true"
            android:clickable="true"
            android:onClick="bouttonok" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:id="@+id/cfgraz"
            android:layout_column="1"
            android:clickable="true"
            android:enabled="true"
            android:onClick="bouttonraz" />
    </TableRow>
</TableLayout>